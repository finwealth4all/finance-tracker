# ===================================
# FINANCE TRACKER - CONFIGURATION
# ===================================
# Copy this file to .env and fill in your values
# For Railway/Render deployment, set these as environment variables in their dashboard

NODE_ENV=production
PORT=3000

# Database Configuration (get these from Railway/Render)
DATABASE_URL=
# OR use individual settings:
DB_HOST=
DB_PORT=5432
DB_NAME=finance_tracker
DB_USER=
DB_PASSWORD=

# JWT Secret - generate a random long string (minimum 32 characters)
# You can use: https://randomkeygen.com/ to generate one
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING_AT_LEAST_32_CHARS

# Frontend URL (for CORS - set to your frontend domain)
FRONTEND_URL=*
